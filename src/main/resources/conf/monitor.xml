<monitor>
    <name>AWS Billing Monitor</name>
    <type>managed</type>
    <description>AWS Billing Monitoring Extension</description>
    <monitor-configuration></monitor-configuration>
    <monitor-run-task>
        <execution-style>periodic</execution-style>
        <execution-frequency-in-seconds>60</execution-frequency-in-seconds>
        <name>AWS Billing Monitor Run task</name>
        <display-name>AWS Billing Monitor Run task</display-name>
        <description>AWS Billing Monitor Run task</description>
        <type>java</type>
        <execution-timeout-in-secs>60</execution-timeout-in-secs>
        
		<task-arguments>
			<argument name="config-file" is-required="true" default-value="monitors/AWSBillingMonitor/conf/config.yaml" />
			<argument name="region-endpoints-config" is-required="true" default-value="monitors/AWSBillingMonitor/conf/region-endpoints.yaml" />
		</task-arguments>
            
        <java-task>
            <classpath>aws-billing-monitoring-extension.jar</classpath>
            <impl-class>com.appdynamics.extensions.aws.billing.BillingMonitor</impl-class>
        </java-task>
        
    </monitor-run-task>
</monitor>